<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_scroll_gradient"
    tools:context=".DetailUnitProyekActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        app:navigationIcon="@drawable/ic_back"
        app:navigationIconTint="@android:color/white"
        app:title="Detail Unit Hunian"
        app:titleCentered="true"
        app:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Card 1: Detail Unit -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:background="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/imgUnit"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_placeholder"
                        android:contentDescription="Gambar Unit"
                        android:background="@color/light_gray"
                        android:padding="4dp"
                        android:clickable="false" />

                    <!-- Nama Hunian - Read-only view -->
                    <TextView
                        android:id="@+id/txtNamaHunian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Nama Hunian"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:paddingTop="16dp"
                        android:paddingBottom="8dp"/>

                    <!-- Nama Hunian - Edit view -->
                    <EditText
                        android:id="@+id/editNamaHunian"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nama Hunian"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:visibility="gone"
                        android:background="@drawable/edittext_border"
                        android:padding="8dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/txtNamaProyek"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Nama Proyek"
                        android:textColor="@color/teal_700"
                        android:textStyle="bold"
                        android:padding="12dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/bg_outlined_green"
                        android:textSize="14sp"/>

                    <!-- GRID LAYOUT UNTUK MODE BACA -->
                    <GridLayout
                        android:id="@+id/gridLayoutRead"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:rowCount="2"
                        android:layout_marginTop="16dp">

                        <!-- Luas Tanah - TextView -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="8dp">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_area"
                                android:tint="@color/teal_700"/>
                            <TextView
                                android:id="@+id/txtLuasTanah"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Luas Tanah: 0 m²"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:layout_marginStart="8dp"/>
                        </LinearLayout>

                        <!-- Luas Bangunan - TextView -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="8dp">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_home"
                                android:tint="@color/teal_700"/>
                            <TextView
                                android:id="@+id/txtLuasBangunan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Luas Bangunan: 0 m²"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:layout_marginStart="8dp"/>
                        </LinearLayout>

                    </GridLayout>

                    <!-- GRID LAYOUT UNTUK MODE EDIT -->
                    <GridLayout
                        android:id="@+id/gridLayoutEdit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:rowCount="2"
                        android:layout_marginTop="16dp"
                        android:visibility="gone">

                        <!-- Luas Tanah - EditText -->
                        <EditText
                            android:id="@+id/editLuasTanah"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="8dp"
                            android:hint="Luas Tanah (m²)"
                            android:inputType="number"
                            android:maxLines="1"
                            android:background="@drawable/edittext_border"
                            android:padding="12dp"/>

                        <!-- Luas Bangunan - EditText -->
                        <EditText
                            android:id="@+id/editLuasBangunan"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="8dp"
                            android:hint="Luas Bangunan (m²)"
                            android:inputType="number"
                            android:maxLines="1"
                            android:background="@drawable/edittext_border"
                            android:padding="12dp"/>

                    </GridLayout>

                    <!-- TOMBOL TAMBAH FASILITAS -->
                    <Button
                        android:id="@+id/btnTambahFasilitas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="Tambah Fasilitas"
                        android:backgroundTint="@color/teal_700"
                        android:textColor="@android:color/white"
                        android:visibility="gone"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp"/>

                    <!-- FASILITAS HUNIAN -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Fasilitas:"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:paddingBottom="8dp"/>

                        <!-- List Fasilitas -->
                        <LinearLayout
                            android:id="@+id/containerFasilitas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@color/very_light_gray"
                            android:padding="8dp"/>

                        <!-- Pesan jika tidak ada fasilitas -->
                        <TextView
                            android:id="@+id/txtNoFasilitas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tidak ada fasilitas"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:padding="16dp"
                            android:visibility="gone"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Deskripsi:"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:paddingTop="16dp"
                        android:paddingBottom="8dp"/>

                    <!-- Deskripsi - Read-only view -->
                    <TextView
                        android:id="@+id/txtDeskripsi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Deskripsi hunian akan ditampilkan di sini"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp"
                        android:padding="8dp"
                        android:background="@color/very_light_gray"
                        android:layout_marginBottom="8dp"/>

                    <!-- Deskripsi - Edit view -->
                    <EditText
                        android:id="@+id/editDeskripsi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:lines="3"
                        android:text="Deskripsi hunian akan ditampilkan di sini"
                        android:textColor="@android:color/black"
                        android:padding="8dp"
                        android:visibility="gone"
                        android:background="@drawable/edittext_border"
                        android:layout_marginBottom="8dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 2: Denah Unit -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardDenah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:background="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Denah Unit"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:paddingBottom="16dp"/>

                    <ImageView
                        android:id="@+id/imgDenah"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_placeholder"
                        android:contentDescription="Denah Unit"
                        android:background="@color/light_gray"
                        android:padding="4dp"
                        android:clickable="false"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>