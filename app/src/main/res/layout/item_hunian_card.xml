<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imageUnit"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_placeholder" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textNamaHunian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Hunian"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/textNamaProyek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="#2E7D32"
                android:padding="4dp"
                android:text="Nama Proyek"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <!-- Luas Tanah -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="12dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_area"/>
                    <TextView
                        android:id="@+id/textLuasTanah"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 m²"
                        android:textSize="12sp"
                        android:layout_marginStart="4dp"
                        android:textColor="@android:color/black"/>
                </LinearLayout>

                <!-- Luas Bangunan -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="12dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_home"/>
                    <TextView
                        android:id="@+id/textLuasBangunan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 m²"
                        android:textSize="12sp"
                        android:layout_marginStart="4dp"
                        android:textColor="@android:color/black"/>
                </LinearLayout>

                <!-- Kamar Tidur -->
                <LinearLayout
                    android:id="@+id/layoutKamarTidur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="12dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_bed"/>
                    <TextView
                        android:id="@+id/textKamarTidur"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="12sp"
                        android:layout_marginStart="4dp"
                        android:textColor="@android:color/black"/>
                </LinearLayout>

                <!-- Kamar Mandi -->
                <LinearLayout
                    android:id="@+id/layoutKamarMandi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="12dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_kamarmandi"/>
                    <TextView
                        android:id="@+id/textKamarMandi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="12sp"
                        android:layout_marginStart="4dp"
                        android:textColor="@android:color/black"/>
                </LinearLayout>

                <!-- Fasilitas Lain -->
                <LinearLayout
                    android:id="@+id/layoutFasilitasLain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_other"/>
                    <TextView
                        android:id="@+id/textFasilitasLain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="12sp"
                        android:layout_marginStart="4dp"
                        android:textColor="@android:color/black"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/btnDetail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="DETAIL"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#2E7D32"
                    android:layout_marginEnd="4dp"/>

                <Button
                    android:id="@+id/btnDelete"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="HAPUS"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#D32F2F"
                    android:layout_marginStart="4dp"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>