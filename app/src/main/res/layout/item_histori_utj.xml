<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:background="@android:color/white"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white">

        <!-- SISANYA TETAP SAMA TANPA DIUBAH -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvPenginput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Penginput: -"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:ellipsize="end"
                android:singleLine="true" />

            <TextView
                android:id="@+id/tvTanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal: -"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                android:ellipsize="end"
                android:singleLine="true" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingEnd="12dp">

                <TextView
                    android:id="@+id/tvNama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama User Prospek: -"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:ellipsize="end"
                    android:singleLine="true" />



                <!-- ========== KODE YANG SUDAH ADA TETAP ========== -->
                <TextView
                    android:id="@+id/tvStatusNPWP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status NPWP : -"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"
                    android:ellipsize="end"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/tvStatusBPJS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status BPJS : -"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"
                    android:ellipsize="end"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email: -"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"
                    android:ellipsize="end"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/tvNoHp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No. HP: -"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"
                    android:ellipsize="end"
                    android:singleLine="true" />
                <!-- ========== TAMBAHAN: TEXTVIEW PROYEK BARU ========== -->
                <TextView
                    android:id="@+id/tvProyek"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Proyek: -"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"
                    android:ellipsize="end"
                    android:singleLine="true" />
                <TextView
                    android:id="@+id/tvHunian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hunian: -"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"
                    android:ellipsize="end"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/tvTipeHunian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipe Hunian: -"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"
                    android:ellipsize="end"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/tvAlamat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alamat: -"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"
                    android:ellipsize="end"
                    android:maxLines="2" />

                <TextView
                    android:id="@+id/tvJumlahUangTandaJadi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jumlah Uang Tanda Jadi: -"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"
                    android:ellipsize="end"
                    android:maxLines="2" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>