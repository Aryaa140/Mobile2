<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/biru_ungu"
    android:padding="16dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/imageProyek"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="centerCrop" />

    <!-- Button Delete lebih kecil -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnDeleteProyek"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:src="@drawable/ic_delete"
        android:visibility="gone"
        app:backgroundTint="#FF4444"
        app:tint="@android:color/white"
        app:fabCustomSize="32dp"
        android:contentDescription="Hapus Proyek" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageProyek"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="40dp">

        <TextView
            android:id="@+id/textNamaProyek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Proyek"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/textLokasiProyek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Lokasi Proyek"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end" />

    </LinearLayout>

</RelativeLayout>