<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- ImageView untuk semua jenis aksi -->
        <ImageView
            android:id="@+id/imgNews"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:visibility="visible"
            android:src="@drawable/ic_placeholder"
            android:contentDescription="Gambar Promo"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp">

            <!-- PERBAIKAN: Judul Promo -->
            <TextView
                android:id="@+id/tvNewsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Judul Promo"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:maxLines="2"
                android:ellipsize="end"/>

            <!-- PERBAIKAN: Nama Penginput -->
            <TextView
                android:id="@+id/tvPenginput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User : Nama Penginput"
                android:textSize="14sp"
                android:textColor="#666666"
                android:maxLines="1"
                android:layout_marginTop="4dp"/>

            <!-- PERBAIKAN: Status -->
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status: Ditambahkan"
                android:textSize="14sp"
                android:textColor="#666666"
                android:maxLines="1"
                android:layout_marginTop="2dp"/>

            <!-- PERBAIKAN: Timestamp -->
            <TextView
                android:id="@+id/tvTimestamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1 jam lalu"
                android:textSize="12sp"
                android:textColor="#666666"
                android:maxLines="1"
                android:layout_marginTop="2dp"/>

            <!-- PERBAIKAN: Kadaluwarsa -->
            <TextView
                android:id="@+id/tvKadaluwarsa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kadaluwarsa: 31 Desember 2024"
                android:textSize="12sp"
                android:textColor="#666666"
                android:drawablePadding="4dp"
                android:paddingTop="4dp"
                android:visibility="visible" />

            <!-- Tambahkan TextView untuk itemType badge -->
            <TextView
                android:id="@+id/tvItemType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>