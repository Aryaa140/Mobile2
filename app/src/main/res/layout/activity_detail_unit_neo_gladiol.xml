<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_scroll_gradient"
    tools:context=".DetailProyekRiversideActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        app:navigationIcon="@drawable/ic_back"
        app:navigationIconTint="@android:color/white"
        app:title="Detail Unit Hunian"
        app:titleCentered="true"
        app:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:background="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/imgProyek"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:src="@drawable/neo_gladiol"
                        android:contentDescription="Gambar Proyek" />

                    <TextView
                        android:id="@+id/txtNama"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="NEO GLADIOL"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:paddingTop="8dp"/>

                    <TextView
                        android:id="@+id/txtLokasi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="The Quality Riverside Krian Sidoarjo"
                        android:textColor="@color/teal_700"
                        android:textStyle="bold"
                        android:padding="6dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/bg_outlined_green"/>

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:rowCount="2"
                        android:layout_marginTop="8dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="4dp">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_area"
                                android:tint="@android:color/holo_red_dark"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Luas Tanah: 90 m²"
                                android:textColor="@android:color/black"
                                android:layout_marginStart="8dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="4dp">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_bed"
                                android:tint="@android:color/holo_red_dark"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Kamar Tidur: 2"
                                android:textColor="@android:color/black"
                                android:layout_marginStart="8dp"/>
                        </LinearLayout>

                        <!-- Luas Bangunan -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="4dp">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_home"
                                android:tint="@android:color/holo_red_dark"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Luas Bangunan: 45 m²"
                                android:textColor="@android:color/black"
                                android:layout_marginStart="8dp"/>
                        </LinearLayout>

                        <!-- Kamar Mandi -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="4dp">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_kamarmandi"
                                android:tint="@android:color/holo_red_dark"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Kamar Mandi: 1"
                                android:textColor="@android:color/black"
                                android:layout_marginStart="8dp"/>
                        </LinearLayout>
                    </GridLayout>

                    <TextView
                        android:id="@+id/txtDeskripsi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="The Quality Group Hunian Berkulitas Harga Terjangkau."
                        android:textColor="@android:color/black"
                        android:paddingTop="12dp"/>
                    <TextView
                        android:id="@+id/txtDeskripsi2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tipe Neo Gladiol New Scandinavian Design merupakan proyek The Quality Group yang berada di Proyek The Quality Riverside Krian Sidoarjo, mengusung fasad scandinavian yang cantik sangat cocok untuk para millenial muda yang ingin memiliki rumah sendiri yang pastinya dengan harga terjangkau."
                        android:textColor="@android:color/black"
                        android:paddingTop="12dp"/>

                    <TextView
                        android:id="@+id/txtDeskripsi3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="DP Nol, Free All Biaya."
                        android:textColor="@android:color/black"
                        android:paddingTop="12dp"/>

        </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardGallery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:background="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/irishdetail"
                        android:contentDescription="Foto Tambahan"/>


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnLihatKavling"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lihat Kavling"
                        android:textColor="@android:color/black"
                        android:backgroundTint="@android:color/white"
                        app:cornerRadius="50dp"
                        app:icon="@drawable/ic_arrow_right"
                        app:iconGravity="textEnd"
                        app:iconTint="@android:color/black"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_marginTop="12dp"
                        android:layout_marginLeft="180dp"
                        android:layout_marginRight="5dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <View
        android:id="@+id/shadow_view"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@drawable/shadow_top"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/bottom_nav_selector"
        app:itemTextColor="@color/bottom_nav_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:itemActiveIndicatorStyle="@style/BottomNav" />

</androidx.constraintlayout.widget.ConstraintLayout>
