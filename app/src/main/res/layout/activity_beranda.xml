<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_bg">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            android:theme="@style/ThemeOverlay.Material3.Dark.ActionBar"
            app:title="Beranda"
            app:titleCentered="true"
            app:titleTextColor="@android:color/white"
            app:navigationIcon="@drawable/ic_menu"
            app:navigationIconTint="@android:color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardWelcome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/topAppBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iconCard"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:src="@drawable/ic_person"
                    android:contentDescription="Icon"
                    android:padding="8dp"
                    android:tint="@android:color/holo_blue_dark"
                    app:shapeAppearanceOverlay="@style/CircleImageView"
                    android:backgroundTint="@color/light_blue_500"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvWelcome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Selamat Datang"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@android:color/holo_blue_dark"/>

                    <TextView
                        android:id="@+id/tvUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama User"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray"/>

                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:clipToPadding="false"
            android:paddingBottom="80dp"
            app:layout_constraintTop_toBottomOf="@id/cardWelcome"
            app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Promo Terbaru"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerPromo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_promo_card" />

                <TextView
                                android:id="@+id/tvMenu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Menu"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:textColor="@color/white"
                                android:layout_marginStart="16dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginBottom="0dp"
                                app:layout_constraintTop_toBottomOf="@id/recyclerPromo"
                                app:layout_constraintStart_toStartOf="parent"/>

                            <HorizontalScrollView
                                android:id="@+id/scrollMenu"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:scrollbars="none"
                                app:layout_constraintTop_toBottomOf="@id/tvMenu">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:padding="8dp">

                                    <com.google.android.material.card.MaterialCardView
                                        android:id="@+id/cardLihatDataM"
                                        android:layout_width="90dp"
                                        android:layout_height="85dp"
                                        android:layout_margin="8dp"
                                        app:cardCornerRadius="16dp"
                                        app:cardElevation="6dp"
                                        app:strokeWidth="1dp"
                                        app:strokeColor="@color/black">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="vertical"
                                            android:gravity="center"
                                            android:padding="8dp">

                                            <ImageView
                                                android:layout_width="40dp"
                                                android:layout_height="40dp"
                                                android:src="@drawable/ic_dataa"
                                                android:contentDescription="Lihat Data"
                                                android:tint="@color/light_blue_500" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="8dp"
                                                android:text="Lihat Data"
                                                android:textSize="12sp"
                                                android:textColor="@android:color/black"
                                                android:textStyle="bold" />

                                        </LinearLayout>
                                    </com.google.android.material.card.MaterialCardView>

                                    <com.google.android.material.card.MaterialCardView
                                        android:id="@+id/cardFasilitasM"
                                        android:layout_width="90dp"
                                        android:layout_height="85dp"
                                        android:layout_margin="8dp"
                                        app:cardCornerRadius="16dp"
                                        app:cardElevation="6dp"
                                        app:strokeWidth="1dp"
                                        app:strokeColor="@color/black">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="vertical"
                                            android:gravity="center"
                                            android:padding="8dp">

                                            <ImageView
                                                android:layout_width="40dp"
                                                android:layout_height="40dp"
                                                android:src="@drawable/ic_masjid"
                                                android:contentDescription="Fasilitas Umum"
                                                app:tint="@color/light_blue_500" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="8dp"
                                                android:text="Fasilitas Umum"
                                                android:textSize="8sp"
                                                android:textColor="@android:color/black"
                                                android:textStyle="bold" />
                                        </LinearLayout>
                                    </com.google.android.material.card.MaterialCardView>

                                    <com.google.android.material.card.MaterialCardView
                                        android:id="@+id/cardProyekM"
                                        android:layout_width="90dp"
                                        android:layout_height="85dp"
                                        android:layout_margin="8dp"
                                        app:cardCornerRadius="16dp"
                                        app:cardElevation="6dp"
                                        app:strokeWidth="1dp"
                                        app:strokeColor="@color/black">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="vertical"
                                            android:gravity="center"
                                            android:padding="8dp">

                                            <ImageView
                                                android:layout_width="40dp"
                                                android:layout_height="40dp"
                                                android:src="@drawable/ic_project"
                                                android:contentDescription="Proyek"
                                                app:tint="@color/light_blue_500" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="8dp"
                                                android:text="Proyek"
                                                android:textSize="12sp"
                                                android:textColor="@android:color/black"
                                                android:textStyle="bold" />

                                        </LinearLayout>
                                    </com.google.android.material.card.MaterialCardView>

                                    <com.google.android.material.card.MaterialCardView
                                        android:id="@+id/cardTampilkanPromoM"
                                        android:layout_width="90dp"
                                        android:layout_height="85dp"
                                        android:layout_margin="8dp"
                                        app:cardCornerRadius="16dp"
                                        app:cardElevation="6dp"
                                        app:strokeWidth="1dp"
                                        app:strokeColor="@color/black">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="vertical"
                                            android:gravity="center"
                                            android:padding="8dp">

                                            <ImageView
                                                android:layout_width="40dp"
                                                android:layout_height="40dp"
                                                android:src="@drawable/ic_tampil"
                                                android:contentDescription="Tampil Promo"
                                                app:tint="@color/light_blue_500" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="8dp"
                                                android:text="Tampil Promo"
                                                android:textSize="10sp"
                                                android:textColor="@android:color/black"
                                                android:textStyle="bold" />
                                        </LinearLayout>
                                    </com.google.android.material.card.MaterialCardView>

                                </LinearLayout>
                            </HorizontalScrollView>

                            <TextView
                                android:id="@+id/tvMenu2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Menu Input Data"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:textColor="@color/white"
                                android:layout_marginStart="16dp"
                                android:layout_marginTop="5dp"
                                app:layout_constraintTop_toBottomOf="@id/recyclerPromo"
                                app:layout_constraintStart_toStartOf="parent"/>

                            <HorizontalScrollView
                                android:id="@+id/scrollMenu2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:scrollbars="none"
                                app:layout_constraintTop_toBottomOf="@id/scrollMenu">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:padding="8dp">

                                    <com.google.android.material.card.MaterialCardView
                                        android:id="@+id/cardProspekM"
                                        android:layout_width="90dp"
                                        android:layout_height="85dp"
                                        android:layout_margin="8dp"
                                        app:cardCornerRadius="16dp"
                                        app:cardElevation="6dp"
                                        app:strokeWidth="1dp"
                                        app:strokeColor="@color/black">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="vertical"
                                            android:gravity="center"
                                            android:padding="8dp"
                                            app:tint="@color/light_blue_500">

                                            <ImageView
                                                android:layout_width="40dp"
                                                android:layout_height="40dp"
                                                android:src="@drawable/ic_pemohon"
                                                android:contentDescription="Prospek"
                                                app:tint="@color/light_blue_500" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="8dp"
                                                android:text="Prospek"
                                                android:textSize="12sp"
                                                android:textColor="@android:color/black"
                                                android:textStyle="bold"
                                                app:tint="@color/light_blue_500" />

                                        </LinearLayout>
                                    </com.google.android.material.card.MaterialCardView>

                                    <com.google.android.material.card.MaterialCardView
                                        android:id="@+id/cardUserpM"
                                        android:layout_width="90dp"
                                        android:layout_height="85dp"
                                        android:layout_margin="8dp"
                                        app:cardCornerRadius="16dp"
                                        app:cardElevation="6dp"
                                        app:strokeWidth="1dp"
                                        app:strokeColor="@color/black">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="vertical"
                                            android:gravity="center"
                                            android:padding="8dp">

                                            <ImageView
                                                android:layout_width="40dp"
                                                android:layout_height="40dp"
                                                android:src="@drawable/ic_prospek"
                                                android:contentDescription="Lihat Data"
                                                android:tint="@color/light_blue_500" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="8dp"
                                                android:text="Booking"
                                                android:textSize="12sp"
                                                android:textColor="@android:color/black"
                                                android:textStyle="bold" />

                                        </LinearLayout>
                                    </com.google.android.material.card.MaterialCardView>

                                    <com.google.android.material.card.MaterialCardView
                                        android:id="@+id/cardInputPromoM"
                                        android:layout_width="90dp"
                                        android:layout_height="85dp"
                                        android:layout_margin="8dp"
                                        app:cardCornerRadius="16dp"
                                        app:cardElevation="6dp"
                                        app:strokeWidth="1dp"
                                        app:strokeColor="@color/black">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="vertical"
                                            android:gravity="center"
                                            android:padding="8dp"
                                            app:tint="@color/light_blue_500">

                                            <ImageView
                                                android:layout_width="40dp"
                                                android:layout_height="40dp"
                                                android:src="@drawable/ic_promo"
                                                android:contentDescription="Prospek"
                                                app:tint="@color/light_blue_500" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="8dp"
                                                android:text="Promo"
                                                android:textSize="12sp"
                                                android:textColor="@android:color/black"
                                                android:textStyle="bold"
                                                app:tint="@color/light_blue_500" />

                                        </LinearLayout>
                                    </com.google.android.material.card.MaterialCardView>

                                    <com.google.android.material.card.MaterialCardView
                                        android:id="@+id/cardNewBeranda"
                                        android:layout_width="90dp"
                                        android:layout_height="85dp"
                                        android:layout_margin="8dp"
                                        app:cardCornerRadius="16dp"
                                        app:cardElevation="6dp"
                                        app:strokeWidth="1dp"
                                        app:strokeColor="@color/black">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="vertical"
                                            android:gravity="center"
                                            android:padding="8dp"
                                            app:tint="@color/light_blue_500">

                                            <ImageView
                                                android:layout_width="40dp"
                                                android:layout_height="40dp"
                                                android:src="@drawable/ic_pemohon"
                                                android:contentDescription="Prospek"
                                                app:tint="@color/light_blue_500" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="8dp"
                                                android:text="Prospek"
                                                android:textSize="12sp"
                                                android:textColor="@android:color/black"
                                                android:textStyle="bold"
                                                app:tint="@color/light_blue_500" />

                                        </LinearLayout>
                                    </com.google.android.material.card.MaterialCardView>
                                </LinearLayout>
                            </HorizontalScrollView>
            </LinearLayout>
        </ScrollView>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            app:menu="@menu/bottom_nav_menu"
            app:itemIconTint="@color/bottom_nav_selector"
            app:itemTextColor="@color/bottom_nav_selector"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:itemActiveIndicatorStyle="@style/BottomNav" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/sidebar_nav_menu"
        android:background="@drawable/bg_sidebar"
        app:itemBackground="@drawable/nav_item_sidebar"
        app:itemIconTint="@color/sidebar_item_selector"
        app:itemTextColor="@color/sidebar_item_selector"/>
</androidx.drawerlayout.widget.DrawerLayout>
