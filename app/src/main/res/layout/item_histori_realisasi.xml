<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:backgroundTint="@android:color/white"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header dengan Nama User dan Tanggal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvNamaUserHistori"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nama User: -"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:ellipsize="end"
                android:singleLine="true" />

            <TextView
                android:id="@+id/tvTanggalRealisasiHistori"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tgl Realisasi: -"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                android:ellipsize="end"
                android:singleLine="true" />

        </LinearLayout>

        <!-- Informasi Detail -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPenginputHistori"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Penginput: -"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                android:layout_marginBottom="4dp"
                android:ellipsize="end"
                android:singleLine="true" />

            <TextView
                android:id="@+id/tvTanggalInputHistori"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Input: -"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                android:ellipsize="end"
                android:singleLine="true" />

        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>